<h1>Apply for Medi-Cal</h1>
<hr>
<form role="form" name="apply" action="applications" method="post">
  <div class="form-group">
    <label for="name_first">First name</label>
      <input type="text" class="form-control" name="name_first" id="name_first" placeholder="Juanita" required>
      <span class="help-block">Include your legal first name.</span>
  </div>

  <div class="form-group">
    <label for="name_middle_initial">Middle initial</label>
      <input type="text" class="form-control" name="name_middle_initial" id="name_middle_initial" placeholder="Q">
      <span class="help-block">Include the initial of your legal middle name, if you have one.</span>
  </div>

  <div class="form-group">
    <label for="name_last">Last name</label>
      <input type="text" class="form-control" name="name_last" id="name_last" placeholder="Smith" required>
      <span class="help-block">Include your legal last name.</span>
  </div>

  <div class="form-group">
    <label for="home_address">Address</label>
      <input type="text" class="form-control" name="home_address" placeholder="1234 Example Street" required>
    <label for="home_apt">Apartment number</label>
      <input type="text" class="form-control" name="home_apt" placeholder="Apt. 3"> <!-- @todo: Determine whether this needs to be in a separate field on the PDF for it to be usable. -->
    <label for="home_city">City</label> <!-- @todo: Reconcile with home_city_state -->
      <input type="text" class="form-control" name="home_city" placeholder="San Francisco" required>
      <div class="input-group">
        <input type="text" class="form-control" name="home_zip_code" placeholder="941..." required>
      </div>
      <span class="help-block">You have to live in California to be eligible for Medi-Cal. If you don't live in California, apply for Medicaid.</span>
  </div>

  <!-- State: CA -->
  <input type="hidden" class="form-control" name="home_state" value="CA">

  <!-- Phone numbers -->
  <!-- "Message number" instead of home/work number -->
  <div class="form-group">
    <label for="message_phone_number_area_code">Area code</label>
      <input type="text" class="form-control" name="message_phone_number_area_code" placeholder="415">
    <label for="message_phone_number">Phone number</label>
      <input type="text" class="form-control" name="message_phone_number" placeholder="555-5555">
      <span class="help-block">A phone number where it's okay to leave a message.</span>
  </div>

  <div class="form-group">
    <label for="email">Email</label>
      <input type="text" class="form-control" name="email" placeholder="juanita.smith@example.com">
      <span class="help-block">You don't have to include your phone number or email address, but it will help us get in touch with you.</span>
  </div>

  <div class="form-group">
    <fieldset id="gender-field">
      <legend id="gender-label">Gender</legend>
      <div class="field field-radio-input">
        <label for="gender_male" required>
          Male
         <input type="radio" name="gender" id="gender_male" required></input>
        </label>
      </div>
      <div class="field field-radio-input">
        <label for="gender_female">
          Female
          <input type="radio" name="gender" id="gender_female" required></input>
        </label>
      </div>
      <span class="help-block">Your gender as recorded on your Social Security card.</span>
    </fieldset>
  </div>

  <div class="form-group">
      <fieldset id="dob">
        <legend id="dob-label">Date of birth</legend>
        <label for="dob_month">Month</label>
          <input id="dob_month" name="dob_month" type="month" required></input>
        <label for="dob_day">Day</label>
          <input id="dob_day" name="dob_day" type="day" required></input>
        <label for="dob_year">Year</label>
          <input id="dob_year" name="dob_year" type="year" required></input>
      </fieldset>
  </div>

  <div class="form-group">
      <label for="ssn">Social Security Number</label>
      <input for="ssn" name="ssn" type="text" placeholder="000-33-0000"></input>
      <span class="help-block">You may be able to receive Medi-Cal even if you do not have a Social Security Number.</span>
  </div>

  <div class="form-group">
    <fieldset id="marital-status-field">
      <legend id="marital-status-label">Marital status</legend>
      <div class="field field-radio-input">
        <label for="marital_status_single">
          Single
          <input type="radio" name="marital_status" id="marital_status_single" required></input>
        </label>
      </div>
      <div class="field field-radio-input">
        <label for="marital_status_married" required>
          Married
         <input type="radio" name="marital_status" id="marital_status_married"></input>
        </label>
      </div>
      <div class="field field-radio-input">
        <label for="marital_status_divorced" required>
          Divorced
         <input type="radio" name="marital_status" id="marital_status_divorced"></input>
        </label>
      </div>
      <div class="field field-radio-input">
        <label for="marital_status_separated" required>
          Separated
         <input type="radio" name="marital_status" id="marital_status_separated"></input>
        </label>
      </div>
      <div class="field field-radio-input">
        <label for="marital_status_widowed" required>
          Widowed
         <input type="radio" name="marital_status" id="marital_status_widowed"></input>
        </label>
      </div>
    </fieldset>
  </div>

  <div class="form-group">
    <fieldset id="citizen-field">
      <legend id="citizen-label">Are you a U.S. citizen or national?</legend>
        <label for="citizen_yes" required>
          Yes
         <input type="radio" name="citizen" id="citizen_yes" required></input>
        </label>
        <label for="citizen_no">
          No
          <input type="radio" name="citizen" id="citizen_no" required></input>
        </label>
      <fieldset id="us-entry-dates">
        <legend id="us-entry-dates-label">If "No," on what date did you enter the U.S.?</legend>
        <label for="us_entry_month">Month</label>
          <input id="us_entry_month" name="us_entry_month" type="month" required></input>
        <label for="us_entry_day">Day</label>
          <input id="us_entry_day" name="us_entry_day" type="day" required></input>
        <label for="us_entry_year">Year</label>
          <input id="us_entry_year" name="us_entry_year" type="year" required></input>
      </fieldset>
    </fieldset>
  </div>

  <div class="form-group">
    <label for="signature">Signature</label>
      <div id="signature_area" class="panel"></div>
      <div id="signature_value_hidden"></div>
      <span class="help-block">Sign on the line. You can sign with your mouse or your finger if you're using a touch screen.</span>
  </div>

    <div class="form-group">
        <button type="submit" id="submit_button" class="btn btn-default">Submit your Medi-Cal application!</button>
    </div>
</form>
